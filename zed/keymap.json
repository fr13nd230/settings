[
  // Leader key bindings (Space as leader) - Normal and Visual modes
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      "space \\": "pane::SplitRight",
      "space w": "pane::CloseActiveItem", 
      "space a w": "pane::CloseAllItems",
      "space p": "file_finder::Toggle",
      "space b": "workspace::ToggleLeftDock",
      "space s": "workspace::Save",
      "space f": "editor::Format"
    }
  },

  // Navigation with leader (Normal and Visual mode only)
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
        "space left": "workspace::ActivatePaneLeft",
        "space right": "workspace::ActivateNextPane", 
        "space up": "pane::ActivatePreviousItem",
        "space down": "pane::ActivateNextItem"    
    }
  },

  // jk to escape from Insert mode and system clipboard
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore",
      "ctrl-d": "editor::SelectNext",
      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste",
      "ctrl-x": "editor::Cut"
    }
  },

  // jk to escape from Visual mode
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "j k": "vim::NormalBefore"
    }
  },

  {
    "context": "Editor",
    "bindings": {
      "ctrl-f": "editor::Format"
    }
  }
]
